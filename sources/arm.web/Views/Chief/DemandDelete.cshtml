@model arm_repairs_project.Models.DemandModel

@{
    ViewBag.Title = "Удаление заявки";
    Layout = "~/Views/Shared/_LayoutChief.cshtml";
}

<h2>Удаление заявки №@Model.Id</h2>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("DemandDelete", "Chief", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Id, new { @class = "hidden" })
                <h4>Вы действительно хотите удалить заявку № @Model.Id от @Model.Date.ToString("G") ?</h4>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                    @Html.ActionLink("Отмена", "Demands", "Chief", null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>

