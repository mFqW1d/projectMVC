@model arm_repairs_project.Models.DemandModel
@{
    ViewBag.Title = "Новая заявка";
    Layout = "~/Views/Shared/_LayoutChief.cshtml";
}

@section styles
{
    <style type="text/css">
        textarea, select, input {
            max-width: initial;
        }
    </style>
}

<h2>Создание новой заявки</h2>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("DemandCreate", "Chief", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel panel-default">
                <div class="panel-heading">Информация о заявке</div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Id, new {@class = "hidden"})
                        @Html.LabelFor(m => m.DescriptionIssue, new {@class = "col-md-12 control-label", @style = "text-align: left"})
                        <div class="col-md-12">
                            @Html.TextAreaFor(m => m.DescriptionIssue, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.DescriptionIssue, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Priority, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.DropDownListFor(m => m.Priority, Model.PriorityList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Priority, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Status, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.DropDownListFor(m => m.Status, Model.StatusList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">Информация о пользователе</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.User, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.DropDownListFor(m => m.User, Model.UserList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Информация об исполнении</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Master, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.DropDownListFor(m => m.Master, Model.MasterList, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Master, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Manager, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.DropDownListFor(m => m.Manager, Model.ManagerList, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Manager, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.DecisionDescription, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.TextAreaFor(m => m.DecisionDescription, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.DecisionDescription, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Equipment, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.TextAreaFor(m => m.Equipment, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Equipment, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.DecisionHours, new { @class = "col-md-12 control-label", @style = "text-align: left" })
                            @Html.TextBoxFor(m => m.DecisionHours, new { @class = "form-control", @type = "number", @step="0.1" })
                            @Html.ValidationMessageFor(m => m.DecisionHours, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                    @Html.ActionLink("Назад", "Demands", "Chief", null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>
