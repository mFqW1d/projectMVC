@model arm_repairs_project.Models.ManageUserViewModels.User

@{
    ViewBag.Title = "Удаление пользователя";
    Layout = "~/Views/Shared/_LayoutChief.cshtml";
}

<h2>Удаление пользователя</h2>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("UserDelete", "Chief", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Id, new { @class = "hidden" })
                <h4>Вы действительно хотите удалить пользователя @Model.UserName (Email @Model.Email)?</h4>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Удалить" class="btn btn-danger" />
                    @Html.ActionLink("Отмена", "Users", "Chief", null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>

